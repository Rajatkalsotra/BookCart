<% include ./partials/header %>

<div id="contact" class="paddsection" style="
margin-top: 120px;
">
    <div class="container"  style="
    width: 60%;
">
        <div class="contact-block1">
            <div class="jumbotron" style="
            border-radius: 20px;
        ">
                <div class="container">
                    <h2 class="mb-30 align-center">ADMIN ADD NEW BOOK</h2>
                    <form action="/new" method="POST" role="form" class="contactForm">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="text" name="p_name" class="form-control" id="name"
                                        placeholder="Book Name" required="required" />
                                </div>
                            </div>
                            
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="number" name="p_price" class="form-control" id="name"
                                        placeholder="Price" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="text" name="p_author" class="form-control" id="name"
                                        placeholder="Author name" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="text" name="p_photo" class="form-control" id="name"
                                        placeholder="Image URL" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <textarea name="p_desc" placeholder="Book Description" class="form-control" id="name" rows="6"></textarea>
                                   
                                </div>
                            </div>
                            
                                <br><br>
                            <div class="col-lg-12 align-center">
                                <input type="submit" class="btn btn-primary " value="Submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
