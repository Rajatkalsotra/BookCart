<% include ./partials/header %>

<div id="contact" class="paddsection" style="
margin-top: 120px;
">
    <div class="container"  style="
    width: 60%;
">
        <div class="contact-block1">
            <div class="jumbotron" style="
            border-radius: 20px;
        ">
                <div class="container">
                    <h2 class="mb-30 align-center">SIGN UP</h2>
                    <form action="/register" method="POST" role="form" class="contactForm">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group contact-block1">
                                    <input type="text" name="user[f_name]" class="form-control" id="name"
                                        placeholder="First Name" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group contact-block1">
                                    <input type="text" name="user[l_name]" class="form-control" id="name"
                                        placeholder="Last Name" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="email" name="user[email_id]" class="form-control" id="name"
                                        placeholder="Your Email" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="text" name="user[mobile]" class="form-control" id="name"
                                        placeholder="Phone number" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="password" name="user[password]" class="form-control" id="name"
                                        placeholder="Password" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <input type="number" name="user[age]" class="form-control" id="name"
                                        placeholder="Age" required="required" />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group contact-block1">
                                    <textarea  name="user[location]" placeholder="Address" class="form-control" id="name" rows="6"></textarea>
                                   
                                </div>
                            </div>
                            <label><p><input type="checkbox" name="terms" style="margin-left: 19px;" required="required"> I
                                accept the
                                Terms and Conditions</p></label>
                                <br><br>
                            <div class="col-lg-12 align-center">
                                <input type="submit" class="btn btn-primary " value="Submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<% include ./partials/footer %>